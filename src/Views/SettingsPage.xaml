            <Border StrokeThickness="0" Padding="20" Background="{DynamicResource CardBackgroundColor}" StrokeShape="RoundRectangle 15">
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                    <Label Grid.Column="0" Text="â“" FontSize="28" VerticalOptions="Center" />
