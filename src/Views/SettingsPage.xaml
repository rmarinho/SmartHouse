            <Border StrokeThickness="0" Padding="20" Background="{DynamicResource CardBackgroundColor}" StrokeShape="RoundRectangle 15">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                    <VerticalStackLayout Grid.Column="0" Spacing="5" VerticalOptions="Center">
                        <Label Text="Push Notifications" FontSize="16" FontAttributes="Bold" />
                        <Label Text="Receive alerts on your device" FontSize="12" TextColor="{DynamicResource Gray600}" />
                    </VerticalStackLayout>
                    <Switch Grid.Column="1" IsToggled="True" VerticalOptions="Center" />
                </Grid>
            </Border>
            
            <Border StrokeThickness="0" Padding="20" Background="{DynamicResource CardBackgroundColor}" StrokeShape="RoundRectangle 15">
