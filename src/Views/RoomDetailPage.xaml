                            <Label Text="On Â· 80% brightness" FontSize="12" TextColor="{DynamicResource Gray600}" />
                        </VerticalStackLayout>
                        <Switch Grid.Column="2" IsToggled="True" VerticalOptions="Center" />
                    </Grid>
                    <!-- Brightness Slider -->
                    <Slider Minimum="0" Maximum="100" Value="80" />
                </VerticalStackLayout>
            </Frame>
            
            <!-- Light 2 -->
            <Frame CornerRadius="15" HasShadow="False" Padding="20" BackgroundColor="{DynamicResource CardBackgroundColor}">
