<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHouse.Views.RoomDetailPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Room Header -->
            <Frame CornerRadius="15" HasShadow="False" Padding="20" BackgroundColor="{DynamicResource CardBackgroundColor}">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                    <Label Grid.Column="0" Text="{Binding Icon}" FontSize="48" VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                        <Label Text="{Binding Name}" FontSize="24" FontAttributes="Bold" />
                        <Label Text="{Binding DeviceCount, StringFormat='{0} devices'}" FontSize="14" TextColor="{DynamicResource Gray600}" />
                        <Label Text="{Binding ActiveDevices, StringFormat='{0} active'}" FontSize="14" TextColor="#10B981" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>
            
            <!-- Quick Actions -->
            <Label Text="Quick Actions" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0" 
                        Text="All On" 
                        BackgroundColor="{DynamicResource Primary}" 
                        TextColor="White"
                        CornerRadius="15"
                        HeightRequest="50" />
                <Button Grid.Column="1" 
                        Text="All Off" 
                        BackgroundColor="{DynamicResource Gray300}" 
                        TextColor="{DynamicResource Gray900}"
                        CornerRadius="15"
                        HeightRequest="50" />
            </Grid>
            
            <!-- Devices Section -->
            <Label Text="Devices" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0" />
            
            <!-- Light 1 -->
            <Frame CornerRadius="15" HasShadow="False" Padding="20" BackgroundColor="{DynamicResource CardBackgroundColor}">
