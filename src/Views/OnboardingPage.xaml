<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHouse.Views.OnboardingPage"
             Title="Welcome to Casa"
             Background="{DynamicResource PageBackgroundColor}"
             Shell.NavBarIsVisible="False">
    
    <Grid RowDefinitions="*,Auto" Padding="30">
        
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="30" VerticalOptions="Center">
                
                <!-- Logo/Icon -->
                <Label Text="ðŸ " 
                       FontSize="80" 
                       HorizontalOptions="Center" />
                
                <!-- Welcome Text -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Welcome to Casa" 
                           FontSize="32" 
                           FontAttributes="Bold" 
                           HorizontalTextAlignment="Center" />
                    <Label Text="Control your smart home from one place" 
                           FontSize="16" 
                           TextColor="{DynamicResource Gray600}" 
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
                
                <!-- Connection Form -->
                <VerticalStackLayout Spacing="20" Margin="0,30,0,0">
                    
                    <Label Text="Connect to Home Assistant" 
                           FontSize="20" 
                           FontAttributes="Bold" />
                    
                    <Border StrokeThickness="0" 
                           Padding="0" 
                           Background="{DynamicResource CardBackgroundColor}"
                           StrokeShape="RoundRectangle 15">
                        <Entry Placeholder="Home Assistant URL" 
                               Text="{Binding Url}"
                               Keyboard="Url"
                               Margin="15,10" />
                    </Border>
                    
                    <Border StrokeThickness="0" 
                           Padding="0" 
                           Background="{DynamicResource CardBackgroundColor}"
                           StrokeShape="RoundRectangle 15">
                        <Entry Placeholder="Access Token" 
                               Text="{Binding Token}"
                               IsPassword="True"
                               Margin="15,10" />
                    </Border>
                    
                    <!-- Status Message -->
                    <Label Text="{Binding StatusMessage}" 
                           FontSize="14"
                           TextColor="{DynamicResource Primary}"
                           HorizontalTextAlignment="Center"
                           IsVisible="{Binding StatusMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                           Margin="0,10,0,0" />
                    
                    <!-- Help Text -->
                    <Border StrokeThickness="0" 
                           Padding="15" 
                           Background="#EEF2FF"
                           StrokeShape="RoundRectangle 15">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ’¡ How to get your token:" 
                                   FontSize="14" 
                                   FontAttributes="Bold" />
                            <Label Text="1. Open Home Assistant" 
                                   FontSize="12" />
                            <Label Text="2. Go to Profile â†’ Long-Lived Access Tokens" 
                                   FontSize="12" />
                            <Label Text="3. Create a new token and paste it here" 
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                    
                </VerticalStackLayout>
                
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Bottom Buttons -->
        <VerticalStackLayout Grid.Row="1" Spacing="15">
            <Button Text="Connect" 
                    FontSize="16"
                    FontAttributes="Bold"
                    Background="{DynamicResource Primary}" 
                    TextColor="White"
                    CornerRadius="15"
                    HeightRequest="55"
                    Clicked="OnConnectClicked" />
            
            <Button Text="Skip for now" 
                    FontSize="14"
                    Background="Transparent"
                    TextColor="{DynamicResource Gray600}"
                    Clicked="OnSkipClicked" />
        </VerticalStackLayout>
        
    </Grid>
</ContentPage>
