<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartHouse.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SmartHouse.Views"
    Title="Casa">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="Rooms"
            Icon="grid.png"
            ContentTemplate="{DataTemplate views:RoomsPage}"
            Route="RoomsPage" />

        <ShellContent
            Title="Automate"
            Icon="automation.png"
            ContentTemplate="{DataTemplate views:AutomatePage}"
            Route="AutomatePage" />

        <ShellContent
            Title="Alerts"
            Icon="bell.png"
            ContentTemplate="{DataTemplate views:AlertsPage}"
            Route="AlertsPage" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
